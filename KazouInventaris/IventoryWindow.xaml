<Window x:Class="KazouInventaris.IventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KazouInventaris"
        mc:Ignorable="d"
        Title="IventoryWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="inventoryListBox" Margin="10,54,10,10" MouseDoubleClick="inventoryListBox_MouseDoubleClick"/>
        <ComboBox Name="categoriesComboBox" HorizontalAlignment="Left" Margin="132,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Label Content="Sorteer op categorie: " HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <Button Content="Voeg een nieuw item toe" Name="addButton" HorizontalAlignment="Left" Margin="307,2,0,0" VerticalAlignment="Top" Height="37" Width="241" Click="addButton_Click"/>

    </Grid>
</Window>
